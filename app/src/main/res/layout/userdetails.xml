    <RelativeLayout
        android:paddingBottom="20dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <at.markushi.ui.CircleButton
            android:id="@+id/delete_imageView"
            android:layout_width="64dip"
            android:layout_height="64dip"
            android:src="@mipmap/ic_delete_white_24dp"
            app:cb_color="@color/holo_blue"
            app:cb_pressedRingWidth="8dip" />

        <at.markushi.ui.CircleButton
            android:id="@+id/edit_imageView"
            android:layout_width="64dip"
            android:layout_height="64dip"
            android:layout_toEndOf="@id/delete_imageView"
            android:src="@mipmap/ic_edit_white_24dp"
            app:cb_color="@color/holo_blue"
            app:cb_pressedRingWidth="8dip" />
        <at.markushi.ui.CircleButton
            android:id="@+id/set_owner_imageView"
            android:layout_width="64dip"
            android:layout_height="64dip"
            android:layout_toEndOf="@id/edit_imageView"
            android:src="@mipmap/ic_person_white_24dp"
            app:cb_color="@color/holo_blue"
            app:cb_pressedRingWidth="8dip" />

    </RelativeLayout>
</LinearLayout>
